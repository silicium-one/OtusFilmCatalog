<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/film1layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/film1"
            android:contentDescription="@string/film1"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="3"
            android:text="@string/film1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/film2layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/film2"
            android:contentDescription="@string/film2"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="3"
            android:text="@string/film2"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/film3layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/film3"
            android:contentDescription="@string/film3"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="3"
            android:text="@string/film3"/>

    </LinearLayout>

</LinearLayout>